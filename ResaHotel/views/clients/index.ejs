<!-- views/clients/index.ejs -->
<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.css">
    <link rel="stylesheet" href="/style.css">

</head>

<body>
    <!-- Navigation -->
    <div class="ui inverted menu navigation-menu">
        <div class="ui container">
            <a href="/" class="header item">
                H√¥tel California
            </a>
            <a href="/" class="item">Accueil</a>
            <a href="/chambres" class="item">G√©rer les chambres</a>
            <a href="/contact" class="item">Contact</a>
            <a href="/clients" class="item">Client</a>
            <div class="right menu">
                <a href="/auth/login" class="item">Connexion</a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="clients-container">
        <!-- Stats Cards -->
        <div class="stats-cards">
            <div class="stat-card">
                <i class="users icon"></i>
                <h3>
                    <%= clients.length %>
                </h3>
                <p>Total Clients</p>
            </div>
            <div class="stat-card">
                <i class="check circle icon"></i>
                <h3>
                    <%= clients.filter(c=> c.chambre_id).length %>
                </h3>
                <p>Clients avec Chambre</p>
            </div>
            <div class="stat-card">
                <i class="star icon"></i>
                <h3>4.8</h3>
                <p>Satisfaction Moyenne</p>
            </div>
        </div>

        <!-- Clients Table -->
        <div class="clients-table-container">
            <h2>
                <i class="list icon"></i>
                Liste des Clients
            </h2>

            <% if (clients.length===0) { %>
                <div class="empty-state">
                    <i class="users icon"></i>
                    <h3>Aucun client enregistr√©</h3>
                    <p>Commencez par ajouter votre premier client</p>
                </div>
                <% } else { %>
                    <table class="clients-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Client</th>
                                <th>Email</th>
                                <th>T√©l√©phone</th>
                                <th>Chambre</th>
                                <th style="text-align: right;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% clients.forEach((client, i)=> { %>
                                <tr>
                                    <td><strong>
                                            <%= i + 1 %>
                                        </strong></td>
                                    <td>
                                        <div class="client-name">
                                            <div class="client-avatar">
                                                <%= client.nom.charAt(0).toUpperCase() %>
                                            </div>
                                            <strong>
                                                <%= client.nom %>
                                            </strong>
                                        </div>
                                    </td>
                                    <td>
                                        <i class="mail icon" style="color: #667eea;"></i>
                                        <%= client.email || 'N/A' %>
                                    </td>
                                    <td>
                                        <i class="phone icon" style="color: #667eea;"></i>
                                        <%= client.telephone || 'N/A' %>
                                    </td>
                                    <td>
                                        <% if (client.chambre_id) { %>
                                            <span
                                                style="background: #e6fffa; color: #047857; padding: 5px 12px; border-radius: 20px; font-size: 0.9rem;">
                                                <i class="bed icon"></i> Chambre <%= client.chambre_id %>
                                            </span>
                                            <% } else { %>
                                                <span style="color: #a0aec0;">-</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-view"
                                                onclick="window.location.href='/clients/<%= client.id %>/edit'">
                                                <i class="edit icon"></i> Modifier
                                            </button>
                                            <button class="btn-view"
                                                style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);"
                                                onclick="window.location.href='/clients/<%= client.id %>/delete'">
                                                <i class="trash icon"></i> Supprimer
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } %>

                        <button class="btn-add" onclick="window.location.href='/clients/create'">
                            <i class="plus icon"></i> Ajouter un nouveau client
                        </button>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="ui container">
            <div class="ui four column stackable grid">
                <div class="column">
                    <h4>√Ä Propos</h4>
                    <p>H√¥tel California, votre destination de luxe pour des s√©jours inoubliables.</p>
                </div>
                <div class="column">
                    <h4>Liens Rapides</h4>
                    <div class="ui link list">
                        <a href="/chambres" class="item">Nos Chambres</a>
                        <a href="/service" class="item">Services</a>
                        <a href="/clients" class="item">Clients</a>
                        <a href="/contact" class="item">Contact</a>
                    </div>
                </div>
                <div class="column">
                    <h4>Contact</h4>
                    <p>üìç 30 r Louise Michel, 38000 Grenoble<br>
                        üìû 04 38 12 36 00<br>
                        üìß Kwentinsaundev@hotelcalifornia.fr</p>
                </div>
                <div class="column">
                    <h4>Suivez-nous</h4>
                    <div class="ui huge icons">
                        <a href="https://www.facebook.com/login.php" target="_blank">
                            <i class="facebook icon" style="cursor: pointer; margin-right: 15px;"></i>
                        </a>
                        <a href="https://www.instagram.com" target="_blank">
                            <i class="instagram icon" style="cursor: pointer; margin-right: 15px;"></i>
                        </a>
                        <a href="https://x.com" target="_blank">
                            <i class="x icon" style="cursor: pointer;"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="ui divider" style="margin-top: 40px;"></div>
            <div style="text-align: center; padding: 20px 0;">
                <p>¬© 2025 H√¥tel California. Tous droits r√©serv√©s.</p>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.js"></script>
</body>

</html>